<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true">
        <bitmap android:src="@drawable/radiobutton_check_press_background"/>
    </item>
    <item android:state_checked="true">
        <bitmap android:src="@drawable/radiobutton_check_background"/>
    </item>
    <item android:state_checked="false" android:state_pressed="true">
        <bitmap android:src="@drawable/radiobutton_uncheck_press_background"/>
    </item>
    <item>
        <bitmap android:src="@drawable/radiobutton_uncheck_background"/>
    </item>
</selector>